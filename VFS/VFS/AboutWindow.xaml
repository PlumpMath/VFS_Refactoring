<Window x:Class="VFS.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="About LJH FileSystem" Height="250" Width="300" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Image Source="images/about.jpg" Stretch="Fill"/>
        <TextBlock Margin="0,40,0,0" TextWrapping="Wrap" Text="LJH FileSystem" Width="140" Height="30"/>
        <TextBlock Margin="0,100,0,0" TextWrapping="Wrap" Text="Developed by happy farmer" Width="120" Height="40"/>
        <TextBlock Margin="0,150,0,0" TextWrapping="Wrap" Text="Copyright@2016.6" Width="160" Height="30"/>
        <TextBlock Margin="0,180,0,0" TextWrapping="Wrap" Text="Email:happyfarmergo@gmail.com" FontSize="14"/>
    </Grid>
</Window>